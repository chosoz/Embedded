//use.py 使用者
from sum import  add,sum    #//从模块sum.py中导入 add 和sum函数

if __name__ == '__main__':  # //做主程序入口(调用者是自己时才执行)
  sum(add(2,3))

//sum.py 库
def add(a,b):
  print(a+b)
  return a+b

def sum(n):
  sum = 0
  for i in range(n + 1):
    sum += i
  print(sum)

if __name__ == '__main__':  # //做测试代码(调用者是自己时才执行)
  sum(3)
  add(1,2)
